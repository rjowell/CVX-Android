<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/stateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/american_typewriter_regular"
            android:text="TextView"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/billNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/american_typewriter_regular"
            android:text="TextView"
            android:textColor="@color/linkColor"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/stateName"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/homeScreenUnfollow"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:text="@string/unfollow"
            android:textAllCaps="@bool/textAllCapsNo"
            android:textColor="@color/mainButtonColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/homeScreenFullText"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:text="@string/fullText"
            android:textAllCaps="@bool/textAllCapsNo"
            android:textColor="@color/mainButtonColor"
            app:layout_constraintEnd_toStartOf="@+id/homeScreenUnfollow"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/billTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/american_typewriter_regular"
            android:text="TextView"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stateName" />

        <TextView
            android:id="@+id/billStatusDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/american_typewriter_regular"
            android:text="TextView"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/billTitle" />

        <TextView
            android:id="@+id/billLatestStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/american_typewriter_regular"
            android:text="TextView"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/billStatusDate" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>


